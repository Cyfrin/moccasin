{
    "name": "Cyfrin's Moccasin DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "containerEnv": {
        "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
        "EXPLORER_API_KEY": "${localEnv:EXPLORER_API_KEY}",
        "OPTIMISTIC_ETHERSCAN_API_KEY": "${localEnv:OPTIMISTIC_ETHERSCAN_API_KEY}",
        "MAINNET_RPC_URL": "${localEnv:MAINNET_RPC_URL}",
        "SEPOLIA_ZKSYNC_RPC_URL": "${localEnv:SEPOLIA_ZKSYNC_RPC_URL}"
    },
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "tintinweb.vscode-vyper",
                "trailofbits.weaudit",
                "ms-python.python",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/usr/bin/zsh"
                    }
                },
                "python.terminal.activateEnvironment": true,
                "python.defaultInterpreterPath": ".venv/bin/python"
            }
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "zsh -c 'uv venv && source .venv/bin/activate && uv sync --all-extras'"
}